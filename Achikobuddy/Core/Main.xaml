<Window x:Class="Achikobuddy.Core.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Achikobuddy"
        Height="300"
        Width="600"
        Loaded="Main_Loaded">

    <Border Background="#FF2D2D30" CornerRadius="6" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Status & Info Text -->
            <TextBlock x:Name="statusText" Grid.Row="0" Margin="0 2" FontWeight="Bold" Foreground="White" Text="Bot Status: Initializing..."/>
            <TextBlock x:Name="playerNameText" Grid.Row="1" Margin="0 2" Foreground="White" Text="Player: Not found"/>
            <TextBlock x:Name="playerPosText" Grid.Row="2" Margin="0 2" Foreground="White" Text="Position: Unknown"/>
            <TextBlock x:Name="playerHealthText" Grid.Row="3" Margin="0 2" Foreground="White" Text="Health: Unknown"/>
            <TextBlock x:Name="spellIdText" Grid.Row="4" Margin="0 2" Foreground="White" Text="Spell ID: Unknown"/>
            <TextBlock x:Name="targetNameText" Grid.Row="5" Margin="0 2" Foreground="White" Text="Target: None"/>
            <TextBlock x:Name="targetGuidText" Grid.Row="6" Margin="0 2" Foreground="White" Text="Target GUID: None"/>
            <TextBlock x:Name="zoneTextLabel" Grid.Row="7" Margin="0 2" Foreground="White" Text="Zone: Unknown"/>
            <TextBlock x:Name="minimapZoneTextLabel" Grid.Row="8" Margin="0 2" Foreground="White" Text="Minimap Zone: Unknown"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,10,-0.4,9.4" Width="574" VerticalAlignment="Bottom">
                <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" Margin="5" Padding="10,4" Width="100"/>
                <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" Margin="5" Padding="10,4" Width="100"/>
                <Button x:Name="ClickToMoveButton" Content="Move" Click="ClickToMoveButton_Click" Margin="5" Padding="10,4" Width="100"/>

                <!-- Spacer to push Debug button to the right -->
                <StackPanel Width="Auto" HorizontalAlignment="Stretch">
                    <Grid Width="auto"/>
                </StackPanel>
                <Button x:Name="DebugButton"
                        Content="Debug"
                        Click="DebugButton_Click"
                        Margin="135,5,5,5.333"
                        Padding="10,4"
                        Background="#D24D4D"
                        Foreground="White"
                        Width="96" HorizontalAlignment="Right"/>

                <!-- Debug button: same size/padding as others, red-ish, right aligned -->
            </StackPanel>
        </Grid>
    </Border>
</Window>
